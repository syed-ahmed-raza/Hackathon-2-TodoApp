{
  "builds": [
    {
      "src": "backend/src/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/auth/(.*)", "dest": "/backend/src/main.py" },
    { "src": "/tasks/(.*)", "dest": "/backend/src/main.py" },
    { "src": "/chat/(.*)", "dest": "/backend/src/main.py" },
    { "src": "/openapi.json", "dest": "/backend/src/main.py" },
    { "src": "/docs", "dest": "/backend/src/main.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}