{
  "builds": [
    {
      "src": "backend/src/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    { "source": "/auth/:path*", "destination": "/backend/src/main.py" },
    { "source": "/tasks/:path*", "destination": "/backend/src/main.py" },
    { "source": "/chat/:path*", "destination": "/backend/src/main.py" },
    { "source": "/openapi.json", "destination": "/backend/src/main.py" },
    { "source": "/docs", "destination": "/backend/src/main.py" }
  ]
}